// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id       String @id @default(uuid())
  username String
  password String
  email    String @unique

  ownedPosts    Post[] @relation("ownedPosts")
}

model AnimalType{
  id       String @id @default(uuid())
  name     String
  
  ownedTopics Topic[] @relation("ownedTopics")
}

model Topic{
  id       String @id @default(uuid())
  title    String

  animalTypeId String
  animalType AnimalType @relation("ownedTopics", fields: [animalTypeId], references: [id])
  
  posts    Post[] @relation("posts")
}

model Post {
  id       String @id @default(uuid())
  title    String
  content  String
  date     DateTime

  ownerUserId String
  ownerUser User @relation("ownedPosts", fields: [ownerUserId], references: [id])

  topicId String
  ownerTopic Topic @relation("posts", fields: [topicId], references: [id])
}

